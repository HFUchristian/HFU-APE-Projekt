<Window x:Class="WPF_Binding_Textboxen.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Binding_Textboxen"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.Resources>
        <local:PersonViewModel x:Key="Vm"/>
    </Window.Resources>
    <StackPanel DataContext="{Binding Source={StaticResource Vm}}">
        <StackPanel Orientation="Horizontal">
            <Label>Name</Label>
            <TextBox Text="{Binding Person.Name}"></TextBox>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Label>Vorname</Label>
            <TextBox Text="{Binding Person.Vorname}"></TextBox>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Label>Alter</Label>
            <TextBox Text="{Binding Person.Alter}"></TextBox>
        </StackPanel>
        </StackPanel>
</Window>
